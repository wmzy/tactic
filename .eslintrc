{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "camelcase": 2,
    // "curly": 2,
    "brace-style": [2, "1tbs"],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "object-curly-spacing": [2, "never"],
    "array-bracket-spacing": [2, "never"],
    "space-infix-ops": 2,
  }
}
